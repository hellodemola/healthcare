{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": ["react", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true // Enable JSX if using React
    }
  },
  "rules": {
    "no-unused-vars": "warn", // Example of custom ESLint rule
    "react/react-in-jsx-scope": "off", // Disable if using Next.js
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "version": "detect" // Automatically detect React version
    }
  }
}
